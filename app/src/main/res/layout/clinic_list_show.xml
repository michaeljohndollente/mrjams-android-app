<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_user_doctor_solid" />

            <TextView
                android:id="@+id/txtShowClinicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Clinic Name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Rate : "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtShowRate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Rate" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnShowViewMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="#B17E64"
                    android:text="Map" />

                <Button
                    android:id="@+id/btnShowSetAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:text="Appointment"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_info_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Clinic Information: "
                android:textColor="@color/shakespeare"
                android:textStyle="bold" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Clinic Type:"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtShowClinicType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clinic Type"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtShowAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtShowPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Telephone: "
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtShowTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telephone"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Doctors: "
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtShowDoctors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No doctors assigned."
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_medical_services_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Clinic Services: "
                    android:textColor="@color/shakespeare"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtShowServices"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtShowServicesPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_medical_services_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Clinic Packages: "
                    android:textColor="@color/shakespeare"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtShowPackages"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtShowPackagesPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"

                       android:orientation="horizontal" >

                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginEnd="10dp"
                           android:layout_weight="1"
                           android:backgroundTint="#D0E5FA"
                           app:cardCornerRadius="5dp">

                           <TextView
                               android:id="@+id/idSunday"
                               android:paddingStart="10dp"
                               android:paddingEnd="10dp"
                               android:paddingTop="10dp"
                               android:paddingBottom="10dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:textAlignment="center"
                               android:text="TextView"
                               android:textColor="@color/black" />
                       </androidx.cardview.widget.CardView>

                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginEnd="10dp"
                           android:layout_weight="1"
                           android:backgroundTint="#AAE3A7"
                           app:cardCornerRadius="5dp">
                           <TextView
                               android:id="@+id/idMonday"
                               android:paddingStart="10dp"
                               android:paddingEnd="10dp"
                               android:paddingTop="10dp"
                               android:paddingBottom="10dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="10dp"
                               android:textAlignment="center"
                               android:layout_weight="1"
                               android:text="TextView"
                               android:textColor="@color/black"/>
                       </androidx.cardview.widget.CardView>

                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginEnd="10dp"
                           android:layout_weight="1"
                           android:backgroundTint="#F2F1D1"
                           app:cardCornerRadius="5dp">
                           <TextView
                               android:id="@+id/idTuesday"
                               android:paddingStart="10dp"
                               android:paddingEnd="10dp"
                               android:paddingTop="10dp"
                               android:paddingBottom="10dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="10dp"
                               android:textAlignment="center"
                               android:layout_weight="1"
                               android:text="TextView"
                               android:textColor="@color/black"/>
                       </androidx.cardview.widget.CardView>

                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginEnd="10dp"
                           android:layout_weight="1"
                           android:backgroundTint="#F1C0A0"
                           app:cardCornerRadius="5dp">
                           <TextView
                               android:id="@+id/idWednesday"
                               android:paddingStart="10dp"
                               android:paddingEnd="10dp"
                               android:paddingTop="10dp"
                               android:paddingBottom="10dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="10dp"
                               android:textAlignment="center"
                               android:layout_weight="1"
                               android:text="TextView"
                               android:textColor="@color/black"/>
                       </androidx.cardview.widget.CardView>

                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginEnd="10dp"
                           android:layout_weight="1"
                           android:backgroundTint="#86B6C9"
                           app:cardCornerRadius="5dp">
                           <TextView
                               android:id="@+id/idThursday"
                               android:paddingStart="10dp"
                               android:paddingEnd="10dp"
                               android:paddingTop="10dp"
                               android:paddingBottom="10dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="10dp"
                               android:layout_weight="1"
                               android:textAlignment="center"
                               android:text="TextView"
                               android:textColor="@color/black"/>
                       </androidx.cardview.widget.CardView>

                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginEnd="10dp"
                           android:layout_weight="1"
                           android:backgroundTint="#FCFC99"
                           app:cardCornerRadius="5dp">
                           <TextView
                               android:id="@+id/idFriday"
                               android:paddingStart="10dp"
                               android:paddingEnd="10dp"
                               android:paddingTop="10dp"
                               android:paddingBottom="10dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="10dp"
                               android:layout_weight="1"
                               android:textAlignment="center"
                               android:text="TextView"
                               android:textColor="@color/black"/>
                       </androidx.cardview.widget.CardView>

                       <androidx.cardview.widget.CardView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginEnd="10dp"
                           android:layout_weight="1"
                           android:backgroundTint="#FFCED4"
                           app:cardCornerRadius="5dp">
                           <TextView
                               android:id="@+id/idSaturday"
                               android:paddingStart="10dp"
                               android:paddingEnd="10dp"
                               android:paddingTop="10dp"
                               android:paddingBottom="10dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginEnd="10dp"
                               android:textAlignment="center"
                               android:layout_weight="1"
                               android:text="TextView"
                               android:textColor="@color/black"/>
                       </androidx.cardview.widget.CardView>


                   </LinearLayout>

               </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>


</LinearLayout>